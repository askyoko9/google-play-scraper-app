{
  "functions": {
    "api/*.py": {
      "maxDuration": 60,
      "memory": 1024,
      "runtime": "python@3.9"
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    }
  ],
  "installCommand": "pip install -r requirements.txt"
}